---
import Base from '@/layouts/Base.astro';
import ProductCard from '@/components/ProductCard.astro';
import PageHeader from '@/partials/PageHeader.astro';
import { filterProducts } from '@/helpers/FilterProducts';
---

<Base
  title="Boost Self-confidence and Self-worth. Manifest Love, Wealth & Health Instantly | Instant Reality Shift"
  description="Shift your reality effortlessly. Download powerful transformational audios designed to help you instantly feel more confident, release imposter syndrome, get your dream job, and align with your best life. Manifest the life you desire with binaural beats and subconscious reprogramming."
>
  <PageHeader
    title="Self-Worth and Confidence"
    description="Reconnect with your true power and inner knowing. These audio tracks use transformative afformations and supportive binaural beats to help dissolve self-doubt, strengthen your sense of worth, and boost authentic confidence. Each session is created to help you stand in your truth, trust yourself fully, and show up as the empowered version of youâ€”bold, radiant, and unshakable."
    playSample={true}
  />

  <section class="section">
    <div class="container">
      <p>
        Each track is about 30 minutes long. Your download will include the mp3
        audio file and an audio companion guide (PDF).
      </p>
      <div class="mt-8 grid md:grid-cols-2 xl:grid-cols-3 gap-4 items-stretch">
        {
          !filterProducts(4).length && (
            <p class="my-8 italic">Audios coming soon!</p>
          )
        }
        {filterProducts(4).map((item) => <ProductCard info={item} />)}
      </div>
    </div>
  </section>
</Base>
