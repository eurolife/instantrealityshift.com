---
import Base from '@/layouts/Base.astro';
import product from '@/config/product-categories.json';
import ProductCard from '@/components/ProductCard.astro';
import PageHeader from '@/partials/PageHeader.astro';
import { filterProducts } from '@/helpers/FilterProducts';
---

<Base
  title="Manifest Wealth and Success. Manifest Love, Wealth & Health Instantly | Instant Reality Shift"
  description="Shift your reality effortlessly. Download powerful transformational audios designed to help you instantly manifest money, wealth and abundance, success, and align with your best life. Manifest the life you desire with binaural beats and subconscious reprogramming."
>
  <PageHeader
    title="Wealth and Success"
    description="Step into alignment with abundance. These audio tracks are crafted to reprogram limiting beliefs around money, success, and self-worth using powerful afformations and binaural beats meditation music. Whether you're manifesting financial flow, business breakthroughs, or confidence in your path, each track is designed to help you feel empowered, worthy, and magnetic to opportunity."
    playSample={true}
  />

  <section class="section">
    <div class="container">
      <p>
        Each track is about 30 minutes long. Your download will include the mp3
        audio file and an audio companion guide (PDF).
      </p>
      <div class="mt-8 grid md:grid-cols-2 xl:grid-cols-3 gap-4 items-stretch">
        {
          !filterProducts(1).length && (
            <p class="my-8 italic">Audios coming soon!</p>
          )
        }
        {filterProducts(1).map((item) => <ProductCard info={item} />)}
      </div>
    </div>
  </section>
</Base>
