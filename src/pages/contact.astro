---
import Base from "@/layouts/Base.astro";
import CallToAction from "@/partials/CallToAction.astro";
import ContactFormSection from "@/partials/ContactFormSection.astro";
import SocialLinks from "@/partials/SocialLinks.astro";
import type { CollectionEntry } from "astro:content";
import { getEntry } from "astro:content";

const { title, description, meta_title, pageHeader } = (
  (await getEntry(
    "contactPageCollection",
    "-index"
  )) as CollectionEntry<"contactPageCollection">
).data;
---

<Base title={title} meta_title={meta_title} description={description}>
  <ContactFormSection pageHeader={pageHeader} />
  <SocialLinks />
  <CallToAction />
</Base>
