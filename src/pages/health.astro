---
import Base from '@/layouts/Base.astro';
import ProductCard from '@/components/ProductCard.astro';
import PageHeader from '@/partials/PageHeader.astro';
import { filterProducts } from '@/helpers/FilterProducts';
---

<Base
  title="Improve Your Health and Well-being. Manifest Love, Wealth & Health Instantly | Instant Reality Shift"
  description="Shift your reality effortlessly. Download powerful transformational audios designed to help you instantly improve your health, get relief from pain, succeed at weight loss, release anxiety, improve sleep, and align with your best life. Manifest the life you desire with binaural beats and subconscious reprogramming."
>
  <PageHeader
    title="Health & Well-Being"
    description="Support your body, mind, and energy with healing-focused afformations and restorative binaural beats. These tracks are designed to promote balance, vitality, and inner harmony by shifting subconscious patterns that may affect physical or emotional wellness. Whether you're seeking to boost your energy, strengthen your immune system, or cultivate inner peace, each audio is a gentle yet powerful tool for aligning with your natural state of well-being."
    playSample={true}
  />

  <section class="section">
    <div class="container">
      <p>
        Each track is about 30 minutes long. Your download will include the mp3
        audio file and an audio companion guide (PDF).
      </p>
      <div class="mt-8 grid md:grid-cols-2 xl:grid-cols-3 gap-4 items-stretch">
        {
          !filterProducts(3).length && (
            <p class="my-8 italic">Audios coming soon!</p>
          )
        }
        {filterProducts(3).map((item) => <ProductCard info={item} />)}
      </div>
    </div>
  </section>
</Base>
