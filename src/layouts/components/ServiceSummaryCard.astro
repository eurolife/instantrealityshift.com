---
const { title, desc, logo, aosDelay } = Astro.props;
import { Icon } from "astro-icon/components";
---

<div
  class="rotating-border group"
  data-aos="fade-up-sm"
  data-aos-delay={aosDelay}
>
  <div
    class="h-full p-8 rounded-2xl border border-border bg-light relative overflow-hidden isolate"
  >
    <div class="absolute inset-0 translate-x-1/3 translate-y-1/3 -z-10">
      <div class="flex items-center justify-center rotate-45 w-full h-full">
        <div
          class="w-2/6 h-5/6 bg-transparent group-hover:bg-secondary/60 blur-[50px] rounded-full -translate-x-24 group-hover:translate-x-0 transition-all duration-500"
        >
        </div>
        <div
          class="w-2/6 h-5/6 bg-transparent group-hover:bg-tertiary/60 blur-[50px] rounded-full -translate-x-16 group-hover:translate-x-0 transition-all duration-500"
        >
        </div>
      </div>
    </div>
    <div class="flex flex-col items-start justify-between h-full">
      <Icon
        name={logo}
        width={36}
        height={36}
        class="text-primary/50 group-hover:text-white transition-all duration-500 mb-10"
      />

      <div class="">
        <h3 class="text-h5 lg:text-h6 font-medium">{title}</h3>
        <p
          class="text-text/90 mt-2 overflow-hidden transition-all duration-500"
        >
          {desc}
        </p>
      </div>
    </div>
  </div>
</div>
