---
const { title, desc, logo } = Astro.props;
import PlaySample from './PlaySample.astro';
---

<div class="rotating-border group inline-block rounded-full">
  <div
    class="h-full py-3 pl-3 pr-5 rounded-full border border-border bg-black relative overflow-hidden isolate"
  >
    <div class="flex flex-col items-center justify-between h-full">
      <PlaySample title={title} />
    </div>
    <div class="absolute inset-0 translate-x-1/3 translate-y-1/3 -z-10">
      <div class="flex items-center justify-center rotate-45 w-full h-full">
        <div
          class="w-4/6 h-5/6 bg-transparent group-hover:bg-secondary/60 blur-[30px] rounded-full -translate-x-8 group-hover:translate-x-0 transition-all duration-500"
        >
        </div>
        <div
          class="w-5/6 h-3/6 bg-transparent group-hover:bg-tertiary/60 blur-[30px] rounded-full -translate-x-6 group-hover:translate-x-0 transition-all duration-500"
        >
        </div>
      </div>
    </div>
  </div>
</div>
