---
import { humanize, markdownify } from '@/lib/utils/textConverter';
import BigCta from '@/components/BigCta.astro';

const {
  title = '',
  description = '',
  playSample = false,
  ...props
}: { title?: string; description?: string; playSample?: boolean } = Astro.props;
---

<section {...props} class="pb-4 lg:pb-12">
  <div class="ph-bg-image">
    <div class="container text-center">
      <div class="px-2 py-16 lg:pt-20 lg:pb-20">
        <h1
          class="text-h3 lg:text-hero"
          set:html={humanize(title)}
          data-aos="fade-up-sm"
          data-aos-delay="100"
        />
        {
          description && (
            <p
              class="text-text/80 mt-4 text-lg"
              set:html={markdownify(description)}
              data-aos="fade-up-sm"
              data-aos-delay="200"
            />
          )
        }
        {
          playSample && (
            <div class="mt-8">
              <BigCta title="Play sample audio" />
            </div>
          )
        }
      </div>
    </div>
  </div>
</section>
