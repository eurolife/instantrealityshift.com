---
import { humanize, markdownify } from "@/lib/utils/textConverter";

const { title = "", description = "", ...props }: { title?: string; description?: string } = Astro.props;
---

<section {...props} class="pb-14 lg:pb-24">
  <div class="ph-bg-image">
    <div class="container text-center">
      <div class="px-8 py-16 lg:pt-20 lg:pb-32">
        <h1 class="text-h2 lg:text-hero" set:html={humanize(title)} data-aos="fade-up-sm" data-aos-delay="100" />
        {
          description && (
            <p
              class="text-text/80 mt-4 text-lg"
              set:html={markdownify(description)}
              data-aos="fade-up-sm"
              data-aos-delay="200"
            />
          )
        }
      </div>
    </div>
  </div>
</section>
