---
import type { CollectionEntry } from "astro:content";
import { getEntry } from "astro:content";

const { title, description, investorList } = (
  (await getEntry("investors", "investors")) as CollectionEntry<"investors">
).data;
---

<section class="section">
  <div class="container">
    <div class="section-intro text-center lg:col-6 mx-auto">
      <h2 class="section-title" data-aos="fade-up-sm" data-aos-delay="100">
        {title}
      </h2>
      <p class="text-text/70" data-aos="fade-up-sm" data-aos-delay="200">
        {description}
      </p>
    </div>
    <div
      class="flex justify-center flex-wrap gap-8"
      data-aos="fade-up-sm"
      data-aos-delay="300"
    >
      {
        investorList &&
          investorList.length &&
          investorList.map((item) => (
            <div class="flex items-center justify-center p-10 rounded-xl border border-border/60">
              <img
                src={item.logo}
                alt={item.brand}
                class="h-9 grayscale opacity-90"
              />
            </div>
          ))
      }
    </div>
  </div>
</section>
